<header>
    <h2>
        <a href="/">
            Codeial
        </a>
        
    </h2>
    
<ul>
    <% if (locals.user){ %>
        <li> 
            <a href="/user/profile/<%= user.id %>" id='user-name'>
                <%= user.name %>
            </a>
        </li>
        <li>
            <a href="/user/sign-out">Sign Out</a>
        </li>

    <%} %>
    <% if (title == 'Codeial | Sign Up' || (title == 'Home Page' && !locals.user)) {%>
        <li>
            Already a user? 
        </li>    
        <li>
            <a href="/user/sign-in">Sign In</a>
        </li>
        <!-- <li>
            <a href="/user/sign-up"><%= title %></a>
        </li> -->
    <%} %>
    <% if (title == 'Codeial | Sign In'){ %>
        <li> 
            New to Codeial?
        </li>
        <li>
            <a href="/user/sign-up">Sign Up</a>
        </li>
    <%} %>

</ul>
</header>