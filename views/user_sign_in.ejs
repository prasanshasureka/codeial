<link rel="stylesheet" href="/css/sign_in.css">

<div id="sign-in-div">
    <h1>
        Sign In
    </h1>
    
    <form action="/user/create-session" method="POST" id="sign-in-form">
        <input type="email" name="email" placeholder="Your Email" required>
        <input type="password" name="password" placeholder="Password" required>
        <input type="submit" id="submit-btn">
    
    </form>
    
    <div id="social-sign-in">
        <p>
            or connect with
            <ul>
                <li>
                    <a href="/user/auth/google"><img src="https://hrcdn.net/community-frontend/assets/google-colored-20b8216731.svg"></a>
                </li>
                <li>
                    <a href="/user/auth/google"><img src="https://hrcdn.net/community-frontend/assets/facebook-colored-af4249157d.svg"></a>
                </li>
                <li>
                    <a href="/user/auth/google"><img src="https://hrcdn.net/community-frontend/assets/linkedin-colored-1db195795c.svg"></a>
                </li>
                <li>
                    <a href="/user/auth/google"><img src="https://hrcdn.net/community-frontend/assets/github-colored-1db995054b.svg"></a>
                </li>
            </ul>
            
        </p>
        <p id="forgot-password">
            <a href="/reset_password/check-mail">Forgot your password?</a>
        </p>
    </div>
    
    
</div>
